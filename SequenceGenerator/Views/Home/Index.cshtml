@model WouterRoelofs.Assessments.SequenceGenerator.Models.Home.Input
@{
    ViewBag.Title = "Home Page";
}

<h2>Welcome</h2>
<p class="lead">Input a positive, whole number and press Generate.</p>
@using (Html.BeginForm("Generate", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Number, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Generate" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}